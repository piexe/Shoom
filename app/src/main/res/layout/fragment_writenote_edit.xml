<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:layout_margin="50dp"
    tools:context="com.giocoso.administrator.shoom.fragment.WritenoteEditFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageButton

        android:id="@+id/move_frament_button2"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_marginRight="20dp"
        android:src="@mipmap/checkbtn"
        android:background="@android:color/transparent" />

    <ScrollView
        android:layout_below="@+id/move_frament_button2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <EditText
            android:id="@+id/memoBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:scrollbars="vertical"
            android:textSize="20dp" />

    </ScrollView>

</RelativeLayout>